@model IEnumerable<Inventory.Models.Categories>

@{
   ViewBag.Title = "Categories";
   Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<p>
   @Html.ActionLink("Add New Category", "CreateCategory")
</p>

<table class="table">
   <tr>

      <th>
         @Html.DisplayNameFor(model => model.Name)
      </th>
      <th>
         @Html.DisplayNameFor(model => model.Description)
      </th>
      <th></th>
   </tr>

   @foreach (var item in Model)
   {
      @Html.HiddenFor(model => item.CategoryID)

      <tr>

         <td>
            @Html.DisplayFor(modelItem => item.Name)
         </td>
         <td>
            @Html.DisplayFor(modelItem => item.Description)
         </td>
         <td>
            @Html.ActionLink("Edit", "UpdateCategory", new { id = item.CategoryID }) |
            @Html.ActionLink("Delete", "DeleteCategory", new { id = item.CategoryID }, new { onclick = "return confirm('Are sure wants to delete?');" })
         </td>
      </tr>



   }

</table> 